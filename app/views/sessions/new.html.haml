%h1 Log In

= form_tag login_path do
  .field
    = label_tag :email_or_username, 'Email or username'
    = text_field_tag :email_or_username, params[:email_or_username]
  .field
    = label_tag :password
    = password_field_tag :password
  .actions
    = submit_tag "Log In", :class => "btn btn-primary"

