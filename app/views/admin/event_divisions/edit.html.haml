- @title << 'Edit division'

= simple_form_for @division, url: admin_division_path(@division), validate: true, html: {class: 'form-horizontal'} do |f|

  = f.input :name
  = f.input :index, label: 'Position'

  .form-actions
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Back', :back, class: 'btn'
