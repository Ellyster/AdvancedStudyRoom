= f.input :name
%a.btn{rel: 'popover', data: {title: 'Ruleset Name', placement: 'bottom', trigger: 'hover', content: 'Name of ruleset'}}
  %i.icon-question-sign

= f.input :main_time_min
%a.btn{rel: 'popover', data: {title: 'Main Time Min', placement: 'bottom', trigger: 'hover', content: 'This is the minimum amount of main game time, in seconds permitted (before byo-yomi). So ten minutes is 60 x 10 = 600.'}}
  %i.icon-question-sign

= f.input :main_time_max
%a.btn{rel: 'popover', data: {title: 'Main Time Max', placement: 'bottom', trigger: 'hover', content: 'This is the maximum amount of main game time, in seconds.'}}
  %i.icon-question-sign

= f.input :overtime_required
%a.btn{rel: 'popover', data: {title: 'Overtime Required', placement: 'bottom', trigger: 'hover', content: 'False if absolute time games are permitted, true if they are not.'}}
  %i.icon-question-sign

= f.input :j_ot_allowed
%a.btn{rel: 'popover', data: {title: 'J Overtime Allowed', placement: 'bottom', trigger: 'hover', content: 'Games using Japanese overtime settings (byo-yomi) will be permitted.'}}
  %i.icon-question-sign

= f.input :c_ot_allowed
%a.btn{rel: 'popover', data: {title: 'C Overtime Allowed', placement: 'bottom', trigger: 'hover', content: 'Games using Canadian overtime settings (e.g., 3 minutes overtime period with 25 stones to be played) will be permitted.'}}
  %i.icon-question-sign

= f.input :j_ot_min_periods
%a.btn{rel: 'popover', data: {title: 'J OT Min Periods', placement: 'right', trigger: 'hover', content: 'The minimum number of Japanese overtime periods allowed. For example, 1 period with n number of stones. It does not control the stones per period.'}}
  %i.icon-question-sign

= f.input :j_ot_max_periods
%a.btn{rel: 'popover', data: {title: 'J OT Min Periods', placement: 'right', trigger: 'hover', content: 'The maximum number of Japanese overtime periods allowed.'}}
  %i.icon-question-sign

= f.input :j_ot_min_period_length
%a.btn{rel: 'popover', data: {title: 'J OT Min Period Length', placement: 'right', trigger: 'hover', content: 'This is the Japanese overtime minimum period length, in seconds. In other words, this is the number of seconds a player has to make a move, or lose a period.'}}
  %i.icon-question-sign

= f.input :j_ot_max_period_length
%a.btn{rel: 'popover', data: {title: 'J OT Max Period Length', placement: 'right', trigger: 'hover', content: 'This is the maximum Japanese overtime period length, in seconds.'}}
  %i.icon-question-sign

= f.input :c_ot_min_stones
%a.btn{rel: 'popover', data: {title: 'C OT Min Stones', placement: 'right', trigger: 'hover', content: 'This controls the Canadian overtime minimum number of stones per overtime period. Canadian overtime is seconds/stones: so this controls the number of stones that must be played in n seconds.'}}
  %i.icon-question-sign

= f.input :c_ot_max_stones
%a.btn{rel: 'popover', data: {title: 'C OT Max Stones', placement: 'right', trigger: 'hover', content: 'This controls Canadian overtime maximum number of stones that must be played in the overtime period.'}}
  %i.icon-question-sign

= f.input :min_handicap
%a.btn{rel: 'popover', data: {title: 'Minimum Handicap', placement: 'top', trigger: 'hover', content: 'This sets a default minimum handicap for the league. 0 is recommended.'}}
  %i.icon-question-sign

= f.input :max_handicap
%a.btn{rel: 'popover', data: {title: 'Maximum Handicap', placement: 'top', trigger: 'hover', content: 'This sets a default maximum handicap.'}}
  %i.icon-question-sign

= f.input :handicap_required
%a.btn{rel: 'popover', data: {title: 'Handicap Required', placement: 'bottom', trigger: 'hover', content: 'False if handicap is not required, true if it is.'}}
  %i.icon-question-sign

= f.input :node_limit
%a.btn{rel: 'popover', data: {title: 'Node Limit', placement: 'bottom', trigger: 'hover', content: 'Essentially, the highest move number in which an event tag may appear in the comments of a game.'}}
  %i.icon-question-sign