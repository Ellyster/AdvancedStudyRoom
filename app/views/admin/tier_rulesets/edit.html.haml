- @title << 'Edit tier ruleset'

= simple_form_for @ruleset, url: admin_tier_ruleset_path(@tier), validate: true, html: {class: 'form-horizontal'} do |f|
  = render 'admin/rulesets/fields', f: f
  .form-actions
    = f.submit 'Update', class: 'btn btn-primary'
    = link_to 'Cancel', :back, class: 'btn'