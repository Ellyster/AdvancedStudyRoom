- @title << 'Edit User'

= simple_form_for @user, url: admin_user_path(@user), html: {class: 'form-horizontal'} do |f|

  = f.input :admin, wrapper: :checkbox
  = f.input :username
  = f.input :email
  = f.input :first_name
  = f.input :last_name

  .form-actions
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Cancel', :back, class: 'btn'