- @title << 'Edit match tag'

= simple_form_for @match_tag, url: admin_match_tag_path(@match_tag), validate: true, html: {class: 'form-horizontal'} do |f|

  = f.input :phrase, autofocus: true
  = f.input :handle, label: 'Player handle'
  = f.input :node, label: 'At Move'

  .form-actions
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Back', :back, class: 'btn'
