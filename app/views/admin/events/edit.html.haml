- @title << 'Edit Event'

= simple_form_for @event, url: admin_event_path(@event), html: {class: 'form-horizontal'} do |f|

  = f.input :name
  = f.input :event_type, collection: ['League', 'Tournament'], default: 1, label: 'Event Type'
  = f.input :server_id, collection: Server.all, include_blank: false
  = f.input :description, input_html: { class: 'markItUp' }

  .form-actions
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Cancel', :back, class: 'btn'