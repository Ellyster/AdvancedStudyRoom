- @title << "Edit account"

= simple_form_for @account, url: admin_account_path(@account), html: {class: 'form-horizontal'} do |f|

  = f.input :handle
  = f.input :rank, collection: rank_options_for_select
  = f.input :active, wrapper: :checkbox

  .form-actions
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Cancel', :back, class: 'btn'