- @title << "Edit #{@tag.event.name} tag"

= simple_form_for @tag, url: admin_tag_path(@tag), validate: true, html: {class: 'form-horizontal'} do |f|

  = f.input :phrase
  = f.input :node_limit, label: 'Move Limit'

  .form-actions
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Back', :back, class: 'btn'
